  <title><%= title %></title>
  <link rel="stylesheet" href="createCampaign.css">
  <style>
  
  .suivi-arbres-body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f4f4;
}
.suivi {
  display: flex;
  align-items: center;
  flex-direction: row;
}
.suivi-arbres-title {
    text-align: center;
    color: #333;
    margin-top: 20px;
}

.suivi-arbres-container {
    text-align: center;
    margin-bottom: 20px;
}

.suivi-arbres-label {
    font-size: 1.2em;
    margin-right: 10px;
}

.suivi-arbres-input {
    padding: 10px;
    font-size: 1em;
    border: 1px solid #ccc;
    border-radius: 5px;
}

.suivi-arbres-button {
    padding: 10px 20px;
    font-size: 1em;
    background-color: #5cb85c;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

.suivi-arbres-button:hover {
    background-color: #4cae4c;
}

.suivi-arbres-list {
    list-style: none;
    padding: 0;
    max-width: 600px;
    margin: 0 auto;
}

.suivi-arbres-item {
    background-color: white;
    margin: 10px 0;
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 5px;
}
.suivi-arbres-item:hover {
    background-color: #f0f8ff;
}

.suivi-arbres-item-title {
    margin: 0 0 10px 0;
    font-size: 1.2em;
    color: #333;
}

.suivi-arbres-item-text {
    margin: 5px 0;
    font-size: 1em;
    color: #666;
}


#map {
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
    border: 1px solid #ddd;
    border-radius: 5px;
    margin-bottom: 20px;
}

</style>
<script src="path_to_your_script.js"></script>
</head>

<body>
  <header class="header">
    <img class="trans" src="3.png" alt="/">
    <nav>
      <ul class="list">
        <li><a href="/" class="lien">ACCUEIL</a></li>
        <li><a href="/catalog" class="lien">CATALOGUE D'ARBRES</a></li>
        <li><a href="/campaign" class="lien">CAMPAGNES</a></li>
        <li><a href="/cart" class="lien">Panier</a></li>
        <% if (user) { %>
          <% if (user.role === 'admin') { %>
            <li><a href="/admin"><i class="fas fa-user" id="profile-icon"></i></a></li>
          <% } else if (user.role === 'user') { %>
            <li><a href="/profile"><i class="fas fa-user" id="profile-icon"></i></a></li>
          <% } %>
        <% } else { %>
          <li><a href="/login" class="disconnected"><i class="fas fa-user"></i> Login</a></li>
        <% } %>
      </ul>
    </nav>
  </header>